    </div>

    <!-- Mobile Menu (Drop-down) -->
    <div id="mobile-menu" class="hidden md:hidden bg-marinho border-t border-slate-700 shadow-inner">
        <nav class="px-4 pt-2 pb-4 space-y-1 sm:px-6" aria-label="Navega√ß√£o mobile">
