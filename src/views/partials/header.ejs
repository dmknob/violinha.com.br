            </nav>

            <!-- Mobile Button -->
            <div class="md:hidden flex items-center">
                <button id="mobile-menu-btn" type="button"
                    class="text-white hover:text-ambar focus:outline-none focus:ring-2 focus:ring-inset focus:ring-ambar rounded-md p-2 min-h-[44px]"
